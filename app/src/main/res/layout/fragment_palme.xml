<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weiÃŸ"
    tools:context="com.hs_osnabrueck.swe_app.myapplication.AchievementFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/palmescreen_humidity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/palmescreen_update"
        android:id="@+id/palmescreen_update"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:id="@+id/palmescreen_imageView1"
        android:layout_marginTop="10px"
        android:src="@drawable/pflanze_maske"
        android:layout_below="@+id/palmescreen_humidity"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_above="@+id/palmescreen_update"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/palmescreen_imageView2" />


</RelativeLayout>
