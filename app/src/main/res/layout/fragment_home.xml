<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hs_osnabrueck.swe_app.myapplication.HomeFragment"
    android:background="@color/weiß">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homescreen_button"
        android:id="@+id/homescreen_scan_button"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/homescreen_beaconinfo"
        android:layout_marginTop="20dp"
        android:background="@color/grey_light"
        android:textColor="@color/weiß" />



    <TextView
        android:id="@+id/homescreen_dummy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/homescreen_score"
        android:layout_alignTop="@+id/homescreen_score"
        android:width="2dp" />

    <TextView
        android:id="@+id/homescreen_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/homescreen_dummy1"
        android:layout_toLeftOf="@+id/homescreen_dummy2"
        android:background="@color/grey_light"
        android:padding="5dp" />

    <TextView
        android:id="@+id/homescreen_dummy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/homescreen_score"
        android:layout_alignTop="@+id/homescreen_score"
        android:width="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/homescreen_rank"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/homescreen_dummy2"
        android:layout_toLeftOf="@+id/homescreen_dummy3"
        android:background="@color/grey_light"
        android:padding="5dp" />

    <TextView
        android:id="@+id/homescreen_dummy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/homescreen_score"
        android:layout_alignTop="@+id/homescreen_score"
        android:width="2dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/homescreen_beaconinfo"
        android:layout_below="@+id/homescreen_score"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/homescreen_scrollView"
        android:layout_below="@+id/homescreen_scan_button">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/homescreen_veranstaltung1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/homescreen_veranstaltung2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/homescreen_veranstaltung3" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
