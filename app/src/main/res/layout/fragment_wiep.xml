<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weiß">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/wiep_beschreibung"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/schwarz"
            android:text="@string/wiep"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="10sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/einkaufswagenscreen_download_button"
            android:text="@string/einkaufswagenscreen_download_button"
            android:textColor="@color/weiß"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp" />

</RelativeLayout>