<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weiß">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/einkaufswagenscreen_beschreibung"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5sp"
            android:textColor="@color/schwarz"
            android:text="@string/einkaufswagenscreen_info" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/einkaufswagenscreen_download_button"
            android:layout_below="@+id/einkaufswagenscreen_beschreibung"
            android:layout_centerHorizontal="true"
            android:text="@string/einkaufswagenscreen_download_button"
            android:background="@color/normal"
            android:textColor="@color/weiß"
            android:paddingLeft="5sp"
            android:paddingRight="5sp" />

        <View
            android:id="@+id/einkaufswagenscreen_divider"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/normal"
            android:layout_below="@+id/einkaufswagenscreen_download_button"
            android:layout_marginTop="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homescreen_button"
            android:id="@+id/einkaufswagenscreen_scan_button"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_action_refresh"
            android:layout_centerHorizontal="true"
            android:background="@color/normal"
            android:textColor="@color/weiß"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true" />

</RelativeLayout>